{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": true,
  },
  "include": ["./src/**/*.ts*"],
  "exclude": ["cjs", "esm", "node_modules"]
}
